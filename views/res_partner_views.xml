<odoo>
  <record id="view_partner_form_inherit_sales_limit" model="ir.ui.view">
    <field name="name">res.partner.form.inherit.sales_limit</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page string="Ventas">
          <group>
            <field name="sales_limit"/>
            <field name="credit_used" readonly="1"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
